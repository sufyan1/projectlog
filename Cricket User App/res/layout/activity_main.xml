
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
              android:background="#0BB990"
              android:orientation="vertical"
        >
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cricket Live Scores"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Type Match ID followed By Respective Button for Stats For Teams Type ID Followed by a or b "
              android:textAppearance="?android:textAppearanceLarge" android:textStyle="normal"
              android:layout_marginTop="10dp" android:id="@+id/textView"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Get ID For Live Matches"
            android:layout_gravity="center_horizontal" android:layout_marginTop="0dp" android:onClick="Get_id"
            android:id="@+id/button3"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter Match ID "
        android:id="@+id/id"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <Button android:layout_width="150dp" android:layout_height="wrap_content" android:text="Match Summay"
            android:layout_gravity="center_horizontal" android:layout_marginTop="0dp" android:onClick="matchLogin"
            android:id="@+id/m_d"/>
    <Button android:layout_width="150dp" android:layout_height="wrap_content" android:text="Playing Conditions"
            android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:onClick="Con"
            android:id="@+id/button4"/>
    <Button android:layout_width="150dp" android:layout_height="wrap_content" android:text="Teams"
            android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:onClick="Teams"
            android:id="@+id/button2"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Live scores"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="userLogin"
        />
    <Button android:layout_width="150dp" android:layout_height="wrap_content" android:text="Current Batsman "
            android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:onClick="Current"
            android:id="@+id/button"/>
</LinearLayout>