<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right|bottom"
    android:layout_margin="10dp"
    android:background="#ff4ceb25"
    android:orientation="vertical" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="376dp"
            android:layout_height="566dp" android:weightSum="1" android:background="#ff55ff30">
        <TextView
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:background="#ff000000"
            android:text="LiveScores"
            android:textColor="#ffffffff"
            android:textSize="30sp" android:layout_weight="0.06" android:id="@+id/live"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score" android:layout_weight="0.06" android:hint="enter scores"
                android:inputType="number|numberDecimal"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wickets" android:layout_weight="0.06" android:hint="enter wickets"
                android:inputType="number" android:numeric="integer"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/overs" android:layout_weight="0.06" android:hint="overs bowled"
                android:inputType="number|numberSigned|numberDecimal"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/overslimit"
                  android:layout_weight="0.06" android:hint="overs limit"
                  android:inputType="number|numberSigned|numberDecimal"/>
        <EditText android:id="@+id/Data" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="Data ..." android:layout_weight="0.06"/>
        <Button android:id="@+id/btnchk" android:layout_width="354dp" android:layout_height="wrap_content"
                android:text="Enter" android:layout_weight="0.06"/>
        <Button
            android:id="@+id/btnDone"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:text="Update Scores" android:layout_weight="0.06"/>
    </LinearLayout>

</LinearLayout>