
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
              android:background="#fffff936"
              android:orientation="vertical"
              android:weightSum="1">
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cricket Scoreboard"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Usage Guidelines"
              android:textAppearance="?android:textAppearanceLarge" android:textStyle="bold"
              android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:id="@+id/textView6"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Update Types " android:textAppearance="?android:textAppearanceLarge"
              android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"
              android:id="@+id/textView5" android:layout_weight="0.06" android:textStyle="bold"
              android:textColorHighlight="#ffffffff"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="I =new score entry "
              android:textAppearance="?android:textAppearanceLarge" android:textStyle="bold"
              android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:id="@+id/textView2"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="U = update score entry"
              android:textAppearance="?android:textAppearanceLarge" android:textStyle="bold"
              android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:id="@+id/textView3"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="D =delete score entry"
              android:textAppearance="?android:textAppearanceLarge" android:textStyle="bold"
              android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:id="@+id/textView4"
              android:textColor="#fe040303"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Scores"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:onClick="userReg"
        />
</LinearLayout>