<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context="com.easyway2in.mysqlconnect.Register"
              android:orientation="vertical"
              android:background="#fffff936"
              android:weightSum="1">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score Update"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="#ff000000"/>
    <Button android:layout_width="141dp" android:layout_height="wrap_content" android:text="Match Details"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:onClick="userReg2"
            android:id="@+id/button2" android:layout_weight="0.03"/>
    <Button android:layout_width="147dp" android:layout_height="wrap_content" android:text="Playing Conditions"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:onClick="Conditions"
            android:id="@+id/button4" android:hint="batsman on crease"/>
    <Button android:layout_width="149dp" android:layout_height="wrap_content" android:text="Teams"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:onClick="Teams"
            android:id="@+id/Teams" android:hint="batsman on crease"/>
    <Button android:layout_width="141dp" android:layout_height="wrap_content" android:text="score"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:onClick="Score"
            android:id="@+id/score" android:hint="batsman on crease"/>
    <Button android:layout_width="141dp" android:layout_height="wrap_content" android:text="Batsman on Strike"
            android:layout_gravity="center_horizontal" android:layout_marginTop="30dp" android:onClick="C_batsman"
            android:id="@+id/upload" android:hint="batsman on crease"/>
</LinearLayout>