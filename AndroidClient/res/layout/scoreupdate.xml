<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout tools:context="com.easyway2in.mysqlconnect.Register"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
                  android:paddingRight="@dimen/activity_horizontal_margin"
                  android:paddingTop="@dimen/activity_vertical_margin"
                  android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
                  android:background="#fffff936" android:weightSum="1"
                  android:layout_weight="1.33">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Score Update"
                  android:textAppearance="?android:textAppearanceLarge" android:textStyle="bold"
                  android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"/>
        <Button android:layout_width="103dp" android:layout_height="wrap_content" android:text="Upload"
                android:layout_gravity="center_horizontal" android:layout_marginTop="10dp" android:onClick="userReg"/>
        <EditText android:layout_width="250dp" android:layout_height="wrap_content" android:hint="Match id"
                  android:id="@+id/id" android:layout_gravity="left|center_horizontal" android:layout_marginTop="10dp"/>
        <EditText android:layout_width="250dp" android:layout_height="wrap_content" android:hint="Update type"
                  android:id="@+id/type" android:layout_gravity="left|center_horizontal" android:layout_marginTop="10dp"/>
        <EditText android:layout_width="250dp" android:layout_height="wrap_content" android:hint="Team"
                  android:id="@+id/name" android:layout_gravity="center_horizontal" android:layout_marginTop="10dp"/>
        <EditText android:layout_width="250dp" android:layout_height="wrap_content" android:hint="Score"
                  android:id="@+id/new_user_name" android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"/>
        <EditText android:layout_width="250dp" android:layout_height="wrap_content" android:hint="Wickets"
                  android:id="@+id/new_user_pass" android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp" android:inputType="textPassword"/>
        <EditText android:layout_width="253dp" android:layout_height="wrap_content" android:hint="overs"
                  android:id="@+id/toss_text" android:layout_marginTop="10dp" android:inputType="textPassword"
                  android:layout_gravity="center_horizontal"/>
        <EditText android:layout_width="253dp" android:layout_height="wrap_content" android:hint="Total_overs"
                  android:id="@+id/t" android:layout_marginTop="10dp" android:inputType="textPassword"
                  android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>