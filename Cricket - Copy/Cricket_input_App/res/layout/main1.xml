<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:background="#fffffc02">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff020101"
        android:text="Cricket ScoreBoard"
        android:textColor="#ffffffff"
        android:textSize="30sp" />

    <Button android:id="@+id/buttonteams" android:layout_width="170dp" android:layout_height="wrap_content"
            android:text="Teams"/>
    <TextView android:id="@+id/teams" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#fffff900" android:text="Match" android:textColor="#ff000000"
              android:textSize="30sp"/>
    <Button android:id="@+id/toss2" android:layout_width="170dp" android:layout_height="wrap_content"
            android:text="Toss"/>
    <TextView android:id="@+id/toss" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#fffff904" android:text="Toss" android:textColor="#ff000000"
              android:textSize="30sp"/>
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Update Score" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fffffc05"
        android:text="Scores"
        android:textColor="#ff000000"
        android:textSize="30sp" />
    <Button android:id="@+id/btnAdd2" android:layout_width="170dp" android:layout_height="wrap_content"
            android:text="Target"/>
    <TextView android:id="@+id/txtResult2" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="#fffffb04" android:text="Target" android:textColor="#ff000000"
              android:textSize="30sp"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:background="#fffffd64" android:indeterminate="false"/>

</LinearLayout>